{
  "name": "@przeprogramowani/design-tokens",
  "version": "2.2.0",
  "description": "Design tokens collection for Przeprogramowani Design System",
  "license": "MIT",
  "keywords": [
    "design tokens",
    "przeprogramowani"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
